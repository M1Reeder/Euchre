<% layout('layout') -%>
<% if( !(typeof message == 'undefined') ){ %>
	<%= message %>
<% } %>
<form action="/login" method="post">
	<div class="row">
		<div class="large-4 large-centered columns">
			<form>
				<fieldset>
					<legend>Login</legend>
					<input class="username-form" type="text" placeholder="Username" name="username"/>
					<input class="password-form" type="password" placeholder="Password" name="password"/>
					<button class="small button login-btn expand" type="submit">Log in</button>
				</fieldset>
			</form>
		</div>
	</div>
</form>
